{
  "name": "cnc-simulator-standalone",
  "version": "1.0.0",
  "description": "Standalone CNC Machine Simulator for UNS Demo System",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "docker:build": "npm run build && docker build -t cnc-simulator:latest .",
    "docker:run": "docker run --rm -it cnc-simulator:latest"
  },
  "keywords": [
    "cnc",
    "simulation",
    "mqtt",
    "uns",
    "industrial-iot"
  ],
  "author": "UNS Smart Maintenance Team",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}